@model List<EsSettimanaleU5S3.Models.CartItem>

@{
    ViewData["Title"] = "Carrello";
}

<h2>Carrello</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Quantità</th>
            <th>Prezzo</th>
            <th>Totale</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Product.Price.ToString("C")</td>
                <td>@(item.Product.Price * item.Quantity).ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Checkout" class="btn btn-primary">Procedi al Checkout</a>
