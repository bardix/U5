@model EsSettimanaleU5S3.Models.ProductViewModel

@{
    ViewData["Title"] = "Create Product";
}

<h2>Create Product</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhotoUrl"></label>
        <input asp-for="PhotoUrl" class="form-control" />
        <span asp-validation-for="PhotoUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DeliveryTime"></label>
        <input asp-for="DeliveryTime" class="form-control" />
        <span asp-validation-for="DeliveryTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Ingredients</label>
        <select asp-for="IngredientIds" class="form-control" asp-items="@(new SelectList(ViewBag.Ingredients, "Id", "Name"))" multiple="multiple"></select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
