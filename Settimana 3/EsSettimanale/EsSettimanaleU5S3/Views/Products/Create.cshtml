@model ProductViewModel

@{
    ViewData["Title"] = "Create Product";
}

<h1>Create Product</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DeliveryTime"></label>
        <input asp-for="DeliveryTime" class="form-control" />
        <span asp-validation-for="DeliveryTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhotoUrl">Photo URL</label>
        <input asp-for="PhotoUrl" class="form-control" placeholder="Enter image URL" />
        <span asp-validation-for="PhotoUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Ingredients</label>
        @foreach (var ingredient in ViewBag.Ingredients)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="IngredientIds" value="@ingredient.Id" />
                <label class="form-check-label">@ingredient.Name</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
