@model IEnumerable<Camera>

<h1>Gestione Camere</h1>
<table class="table">
    <thead>
        <tr>
            <th>Numero</th>
            <th>Descrizione</th>
            <th>Tipologia</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var camera in Model)
        {
            <tr>
                <td>@camera.Numero</td>
                <td>@camera.Descrizione</td>
                <td>@camera.Tipologia</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@camera.Numero">Modifica</a> |
                    <a asp-action="Delete" asp-route-id="@camera.Numero">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create">Aggiungi Nuova Camera</a>