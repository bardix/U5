@model IEnumerable<User>

<h1>Gestione Utenti</h1>
<table class="table">
    <thead>
        <tr>
            <th>UserName</th>
            <th>Email</th>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.UserId">Modifica</a> |
                    <a asp-action="Delete" asp-route-id="@user.UserId">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create">Aggiungi Nuovo Utente</a>