@model IEnumerable<Prenotazione>

<h1>Gestione Prenotazioni</h1>
<table class="table">
    <thead>
        <tr>
            <th>Codice Fiscale</th>
            <th>Numero Camera</th>
            <th>Data Prenotazione</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prenotazione in Model)
        {
            <tr>
                <td>@prenotazione.CodiceFiscaleCliente</td>
                <td>@prenotazione.NumeroCamera</td>
                <td>@prenotazione.DataPrenotazione.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@prenotazione.IDPrenotazione">Modifica</a> |
                    <a asp-action="Delete" asp-route-id="@prenotazione.IDPrenotazione">Elimina</a> |
                    <a asp-action="StampaDettaglioPrenotazione" asp-route-id="@prenotazione.IDPrenotazione">Stampa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create">Aggiungi Nuova Prenotazione</a> |
<a asp-action="RicercaPrenotazioniCliente">Ricerca Prenotazioni per Cliente</a> |
<a asp-action="ConteggioPrenotazioniPensioneCompleta">Conteggio Prenotazioni Pensione Completa</a>
