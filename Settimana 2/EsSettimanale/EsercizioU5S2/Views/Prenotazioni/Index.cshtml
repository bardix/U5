@model IEnumerable<Prenotazione>

<h1>Gestione Prenotazioni</h1>

<form method="get" asp-action="RicercaPrenotazioniCliente">
    <div class="form-group">
        <label for="codiceFiscale">Codice Fiscale Cliente:</label>
        <input type="text" name="codiceFiscale" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Cerca Prenotazioni</button>
</form>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Codice Fiscale</th>
            <th>Numero Camera</th>
            <th>Data Prenotazione</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prenotazione in Model)
        {
            <tr>
                <td>@prenotazione.CodiceFiscaleCliente</td>
                <td>@prenotazione.NumeroCamera</td>
                <td>@prenotazione.DataPrenotazione.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@prenotazione.IDPrenotazione">Modifica</a> |
                    <a asp-action="Delete" asp-route-id="@prenotazione.IDPrenotazione">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Aggiungi Nuova Prenotazione</a>
<a asp-action="ConteggioPrenotazioniPensioneCompleta" class="btn btn-info">Conteggio Prenotazioni Pensione Completa</a>
