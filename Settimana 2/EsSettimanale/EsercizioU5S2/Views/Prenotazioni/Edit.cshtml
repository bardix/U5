@model Prenotazione

<h1>Modifica Prenotazione</h1>
<form asp-action="Edit">
    <input type="hidden" asp-for="IDPrenotazione" />
    <div class="form-group">
        <label asp-for="CodiceFiscaleCliente"></label>
        <select asp-for="CodiceFiscaleCliente" class="form-control" asp-items="ViewBag.Clienti"></select>
        <span asp-validation-for="CodiceFiscaleCliente" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumeroCamera"></label>
        <select asp-for="NumeroCamera" class="form-control" asp-items="ViewBag.Camere"></select>
        <span asp-validation-for="NumeroCamera" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataPrenotazione"></label>
        <input asp-for="DataPrenotazione" type="date" class="form-control" />
        <span asp-validation-for="DataPrenotazione" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataInizioSoggiorno"></label>
        <input asp-for="DataInizioSoggiorno" type="date" class="form-control" />
        <span asp-validation-for="DataInizioSoggiorno" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataFineSoggiorno"></label>
        <input asp-for="DataFineSoggiorno" type="date" class="form-control" />
        <span asp-validation-for="DataFineSoggiorno" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Dettagli"></label>
        <select asp-for="Dettagli" class="form-control">
            <option value="Pernottamento con Prima Colazione" selected="@Model.Dettagli == " Pernottamento con Prima Colazione"">Pernottamento con Prima Colazione</option>
            <option value="Mezza Pensione" selected="@Model.Dettagli == " Mezza Pensione"">Mezza Pensione</option>
            <option value="Pensione Completa" selected="@Model.Dettagli == " Pensione Completa"">Pensione Completa</option>
        </select>
        <span asp-validation-for="Dettagli" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salva</button>
</form>
<a asp-action="Index">Torna alla lista</a>
