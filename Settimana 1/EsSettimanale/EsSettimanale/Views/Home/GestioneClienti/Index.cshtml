@{
    ViewData["Title"] = "Clienti";
}

<h1>Clienti</h1>

<p>
    <a asp-page="Create">Aggiungi Cliente</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Tipo</th>
            <th>Codice Fiscale</th>
            <th>Partita IVA</th>
            <th>Indirizzo</th>
            <th>Città</th>
            <th>CAP</th>
            <th>Telefono</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model.Clienti)
        {
            <tr>
                <td>@cliente.Nome</td>
                <td>@cliente.Tipo</td>
                <td>@cliente.CodiceFiscale</td>
                <td>@cliente.PartitaIVA</td>
                <td>@cliente.Indirizzo</td>
                <td>@cliente.Città</td>
                <td>@cliente.CAP</td>
                <td>@cliente.Telefono</td>
                <td>@cliente.Email</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@cliente.ID">Modifica</a> |
                    <a asp-page="Delete" asp-route-id="@cliente.ID">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>