@model AggiornamentoSpedizione
@{
    ViewData["Title"] = "Aggiungi Aggiornamento Spedizione";
}

<h1>Aggiungi Aggiornamento Spedizione</h1>

<h4>Aggiornamento Spedizione</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Stato" class="control-label"></label>
                <input asp-for="Stato" class="form-control" />
                <span asp-validation-for="Stato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Luogo" class="control-label"></label>
                <input asp-for="Luogo" class="form-control" />
                <span asp-validation-for="Luogo" class="text-danger"></span>
            </div>
            <!-- Aggiungi altri campi qui -->
            <div class="form-group">
                <input type="submit" value="Salva" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>