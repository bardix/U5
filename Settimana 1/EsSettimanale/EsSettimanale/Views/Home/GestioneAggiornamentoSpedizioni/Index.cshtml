@model IEnumerable<AggiornamentoSpedizione>
@{
    ViewData["Title"] = "Aggiornamenti Spedizione";
}

<h1>Aggiornamenti Spedizione</h1>

<p>
    <a asp-page="Create">Aggiungi Aggiornamento</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Stato</th>
            <th>Luogo</th>
            <th>Descrizione</th>
            <th>Data e Ora Aggiornamento</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var aggiornamento in Model)
        {
            <tr>
                <td>@aggiornamento.Stato</td>
                <td>@aggiornamento.Luogo</td>
                <td>@aggiornamento.Descrizione</td>
                <td>@aggiornamento.DataOraAggiornamento</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@aggiornamento.ID">Modifica</a> |
                    <a asp-page="Delete" asp-route-id="@aggiornamento.ID">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>